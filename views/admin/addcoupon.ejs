<%- include("../admin/layouts/admin_header.ejs")%>

<form method="post">
  <div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
      <h6 class="mb-4">ADD COUPON</h6>
      <div class="form-floating mb-3">
        <input
          id="company"
          name="coupon"
          type="text"
          class="form-control"
          id="floatingInput"
          required
        />
        <label for="floatingInput">ENTER THE COUPON CODE</label>
      </div>

      <div class="form-floating mb-3">
        <input
          name="date"
          type="date"
          class="form-control"
          id="floatingInput"
          required
        />
        <label for="floatingInput">ENTER THE DATE</label>
      </div>

      <div class="form-floating mb-3">
        <input
          name="amount"
          type="number"
          class="form-control"
          id="floatingInput"
          required
        />
        <label for="floatingInput">DISCOUNT AMOUNT</label>
      </div>
      <div class="form-floating mb-3">
        <input
          name="cartamount"
          type="number"
          class="form-control"
          id="floatingInput"
          required
        />
        <label for="floatingInput">ENTER CART AMOUNT</label>
      </div>

      <div class="form-floating mb-3">
        <input
          name="couponcount"
          type="number"
          class="form-control"
          id="floatingInput"
          required
        />
        <label for="floatingInput">ENTER THE COUPON COUNT</label>
      </div>

      <button type="submit" class="btn btn-danger m-2">ADD COUPON</button>
    </div>
  </div>
</form>

<%- include("../admin/layouts/admin_footer.ejs")%>

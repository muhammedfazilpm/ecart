<!DOCTYPE html>
<html>
  <head>
    <title>OTP Verification Card Design | Rustcode</title>
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  </head>
  <body style="background-color: rgb(60, 172, 147);">
    <div class="container d-flex justify-content-center align-items-center">
      <div class="card text-center" style="background-color: #f2f2f2;">
        <div class="card-header p-5" style="background-color: #131613; color: #fff;">
          <h5 class="mb-2">OTP VERIFICATION</h5>
          <div>
            <small>Enter the OTP that has been sent to your email</small>
            <% if(typeof message !=='undefined') { %>
              <p class="mt-3 text-danger"><%= message %></p>
            <% } %>
          </div>
        </div>
        <form action="/otp" method="post">
          <div class="input-group mt-4">
            <input name="otp" type="text" class="form-control" maxlength="4" style="border-color: #4caf50;">
          </div>
          <div class="mt-3">
           
              <a href="/register" class="text-decoration-none" style="color: #4caf50;">back</a>
         
           
          </div>
          <div class="mt-4 mb-5">
            <button class="btn btn-success px-5 verify-btn" style="background-color: #0b0e0b; border-color: #4caf50;">Verify</button>
          </div>
        </form>
        <p style="color:rgb(8, 8, 8);" id="countdown-timer">OTP will expire in <span id="countdown">30</span> seconds.</p>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>  
</body>
</html>

<style>
  body{

   
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;

  }
</style>


<script>
  function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    setInterval(function () {
        minutes = parseInt(timer / 60, 10)
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = duration;
        }
    }, 1000);
}

var countdown = document.getElementById("countdown");
var countdownTimer = document.getElementById("countdown-timer");

startTimer(30, countdown);
// Update timer element and display message when OTP expires
function countdownExpired() {
  countdownTimer.innerHTML = 'OTP has expired. Resend the OTP <a href="/resend">here</a>.';

}

setTimeout(countdownExpired, 30000);
</script>  